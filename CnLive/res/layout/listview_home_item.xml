<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center"
        android:background="@drawable/subtitle_bg">
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/subTitle"
            style="@style/MyTextTitleStyle" />
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/more_btn"
            android:background="@drawable/more_icon" />
    </LinearLayout>
    <com.wg.cnlive.myviews.HorizontalListView 
        android:id="@+id/horizontalList"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_home_height"
        android:cacheColorHint="@color/alpha0" />

</LinearLayout>
