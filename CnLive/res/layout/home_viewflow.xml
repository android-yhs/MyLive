<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <FrameLayout 
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/galleryHeight">
	        <com.wg.cnlive.myviews.ViewFlow 
		        android:id="@+id/mainViewFlow"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:spacing="0dip" />
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="40dp"
	            android:id="@+id/recommendTitle"
	            android:layout_gravity="center|bottom"
	            android:gravity="center"
	            style="@style/MyTextContentStyle"
	            android:background="@color/blue70"/>
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="40dp"
	            android:orientation="vertical"
	            android:layout_gravity="center|bottom"
	            android:gravity="right|center"
	            android:paddingLeft="5dp" >
	            <com.wg.cnlive.myviews.CircleFlowIndicator
	                xmlns:app="http://schemas.android.com/apk/res-auto"
	                android:id="@+id/mainFlowIndic"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                app:activeColor="@color/red"
	                app:inactiveColor="@color/gray"
	                app:inactiveType="fill" />
	        </LinearLayout>
	    </FrameLayout>

</LinearLayout>
