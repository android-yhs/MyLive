<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/list_home_width"
    android:layout_height="@dimen/list_home_height"
    android:orientation="vertical"
    android:paddingLeft="4dp"
    android:paddingRight="3dp"
    android:paddingTop="10dp"
    android:paddingBottom="0dp" >
    
    <LinearLayout 
        android:layout_width="@dimen/list_home_image_height"
        android:layout_height="@dimen/list_home_image_height"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/tv_content_bg">
        <ImageView 
	        android:id="@id/imageview"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:scaleType="fitCenter" />
    </LinearLayout>
    
    <TextView 
        android:id="@id/title"
        android:layout_width="@dimen/list_home_image_height"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:singleLine="true"
        android:layout_gravity="center"
        style="@style/MyTextContentStyle"/>

</LinearLayout>
